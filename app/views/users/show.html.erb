<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
	<section>
	  <h1>
   		<%= gravatar_for @user %>
  		<%= @user.name %>
	  </h1>
	</section>
  </aside>
  
  <div class="span8">
    <% if @user.topics.any? %>
      <h3>Topics (<%= @user.topics.count %>)</h3>
      <ol class="topics">
        <%= render @topics %>
      </ol>
      <%= will_paginate @topics %>
    <% end%>
  </div>
  
</div>
