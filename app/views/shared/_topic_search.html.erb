<div class="row center">  
  <div class="min">
  <%= form_tag({}, :method => "get", :class => "navbar-search") do %>
    <%= text_field_tag :search_text, nil, :placeholder => 'Search',  :class => "search-query max" %>
    <%= submit_tag "Search", :class => "btn btn-medium btn-primary" %>
  <% end %> 
  </div>
</div>
<div class="row">
  <div class="span3">
  </div>
  <div class="span6">
    <% if @search_results %>
    <h3>(<%= @search_results.count %>)Results</h3>
      <%= will_paginate @search_results %>
    <ol class="topics">
      <%= render @search_results %>
    </ol>
    <%= will_paginate @search_results %>
    <% end%>
  </div>
</div>
